{
    "name": "chewyou/silverstripe-clean-login-screen",
    "description": "Clean login screen",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "type": "silverstripe-vendormodule",
    "autoload": {
        "psr-4": {
            "Education\\LoginScreen\\": "src/"
        }
    },
    "extra": {
        "expose": [
            "client/dist"
        ]
    },
    "require": {
        "silverstripe/vendor-plugin": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/"
    }
}
